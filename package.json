{
  "name": "folder-in-new-window",
  "publisher": "shouples-dev",
  "icon": "resources/open-file-folder.png",
  "displayName": "Folder in New Window",
  "description": "Easily open a folder in a new VS Code window.",
  "repository": {
    "type": "git",
    "url": "https://github.com/shouples/vscode-folder-in-new-window.git"
  },
  "bugs": {
    "url": "https://github.com/shouples/vscode-folder-in-new-window/issues"
  },
  "license": "MIT",
  "version": "0.7.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "keywords": [
    "folder",
    "window",
    "explorer",
    "workspace",
    "open",
    "new-window",
    "navigation",
    "productivity"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "folder-in-new-window.open",
        "title": "Open Folder in New Window",
        "icon": "$(folder)"
      }
    ],
    "keybindings": [
      {
        "command": "folder-in-new-window.open",
        "key": "alt+shift+n",
        "mac": "opt+shift+n"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceScheme == file",
          "command": "folder-in-new-window.open",
          "group": "navigation@999"
        }
      ],
      "editor/context": [
        {
          "when": "resourceScheme == file",
          "command": "folder-in-new-window.open",
          "group": "navigation@999"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceScheme == file",
          "command": "folder-in-new-window.open",
          "group": "navigation@999"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.57.0",
    "sinon": "^20.0.0",
    "typescript": "^5.4.5"
  }
}
